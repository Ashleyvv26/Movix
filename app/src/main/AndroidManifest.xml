<?xml version="1.0" encoding="utf-8"?>
<manifest package="com.ashley.peliculas"
          xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:name="com.ashley.peliculas.common.App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_movix"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_movix_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.ashley.peliculas.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <activity
            android:name="com.ashley.peliculas.details.MovieDetailsActivity"
            android:theme="@style/AppTheme.NoActionBar"/>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts"/>

    </application>

</manifest>